<%include partials/header %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1> Welcome to Yelp Camp </h1>
			<p> Checkout our campgrounds below </p>
			<p>
				<a class="primary btn btn-lg btn-primary" href="/campgrounds/new">
					 New Campground 
				</a> 
			</p>
		</div>
	</header><!-- /header -->
	
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
	<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-4 col-sm-6">
			<div class="thumbnail">
				<img src="<%=campground.url%>">	
				<div class="caption">
					<h4> <%= campground.name %> </h4>
				</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
						More info 
					</a>
				</p>
			</div>	
		</div>
	<%}); %>
	</div>

</div>

<%include partials/footer %>
