<%include ../partials/header %>

<div class="container">	
	<div class="row">	
		<h1 style="text-align: center; margin-top: 50px;">
			Edit Your Comment to <%=campground.name%>
		</h1>

		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">

				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				
<!-- 				<div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="Author">
				</div> -->
				
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block" type="submit">Submit</button>
				</div>

			</form>
			<a href="/campgrounds/<%= campground._id%>">Go Back</a>
		</div>
	</div>
</div>


<%include ../partials/footer %>

